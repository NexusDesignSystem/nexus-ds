{
  "name": "@nexus-ds/skeleton",
  "version": "1.0.19",
  "description": "Skeleton is used to display the loading state of some component.",
  "keywords": [
    "skeleton"
  ],
  
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NexusDesignSystem/nexusUI.git",
    "directory": "packages/components/skeleton"
  },
  "bugs": {
    "url": "https://github.com/NexusDesignSystem/nexusUI/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "yarn build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@nexus-ds/system-rsc": "workspace:*",
    "@nexus-ds/theme": "workspace:*",
    "@nexus-ds/shared-utils": "workspace:*",
    "@nexus-ds/react-utils": "workspace:*"
  },
  "devDependencies": {
    "@nexus-ds/card": "workspace:*",
    "@nexus-ds/button": "workspace:*",
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
